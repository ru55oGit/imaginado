<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="350dp"
    android:background="@color/primaryColor"
    android:padding="15dp"
    android:weightSum="2">

    <ImageButton
        android:id="@+id/dialogButtonOK"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/cerrar"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

        <ImageView
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/sintiempo"
            android:layout_below="@+id/dialogButtonOK"
            android:layout_centerHorizontal="true" />


        <ImageView
            android:id="@+id/comprarSegundos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|left"
            android:background="@drawable/comprar"
            android:layout_weight="1"
            android:layout_alignTop="@+id/ganarSegundos"
            android:layout_alignParentEnd="true" />

        <ImageView
            android:id="@+id/ganarSegundos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:background="@drawable/ganar"
            android:layout_weight="1"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true" />

</RelativeLayout>