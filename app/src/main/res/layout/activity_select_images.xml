<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/primaryColor"
    android:id="@+id/selectLayout"
    tools:context="com.luckypalm.acertijos.SelectImagesActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout"
        android:gravity="center_horizontal|top"
        android:layout_marginBottom="15dp"
        android:foregroundGravity="top">
        <ImageView
            android:id="@+id/level"
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:background="@drawable/level"/>

        <TextView
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:id="@+id/labelLevelText"
            android:textStyle="bold"
            android:textSize="@dimen/label_size"
            android:background="@drawable/circle"
            android:textAlignment="center"
            android:textColor="@color/secondaryColor"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/level"
            android:layout_toEndOf="@+id/level" />

        <TextView
            android:layout_width="75dp"
            android:layout_height="77dp"
            android:background="@drawable/lightchrono"
            android:id="@+id/chrono"
            android:textAlignment="center"
            android:textSize="25sp"
            android:rotation="20"
            android:paddingTop="28dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/linearLayout">

        <ImageView
            android:layout_width="155dp"
            android:layout_height="155dp"
            android:id="@+id/imgView1"
            android:src="@drawable/acertijos"
            android:layout_gravity="left|top"
            android:padding="5dp"
            android:background="@color/secondaryColor"/>

        <ImageView
            android:layout_width="155dp"
            android:layout_height="155dp"
            android:id="@+id/imgView2"
            android:layout_gravity="right|top"
            android:src="@drawable/escudosfutbol"
            android:padding="5dp"
            android:background="@color/secondaryColor"/>

        <ImageView
            android:layout_width="155dp"
            android:layout_height="155dp"
            android:id="@+id/imgView3"
            android:layout_gravity="left|center"
            android:src="@drawable/logos"
            android:padding="5dp"
            android:background="@color/secondaryColor"/>

        <ImageView
            android:layout_width="155dp"
            android:layout_height="155dp"
            android:id="@+id/imgView4"
            android:layout_gravity="right|center"
            android:src="@drawable/iconospeliculas"
            android:padding="5dp"
            android:background="@color/secondaryColor"/>

        <ImageView
            android:layout_width="155dp"
            android:layout_height="155dp"
            android:id="@+id/imgView5"
            android:layout_gravity="left|bottom"
            android:src="@drawable/personajesanimados"
            android:padding="5dp"
            android:background="@color/secondaryColor"/>

        <ImageView
            android:layout_width="155dp"
            android:layout_height="155dp"
            android:id="@+id/imgView6"
            android:layout_gravity="right|bottom"
            android:src="@drawable/paises"
            android:padding="5dp"
            android:background="@color/secondaryColor"/>
    </FrameLayout>
</RelativeLayout>