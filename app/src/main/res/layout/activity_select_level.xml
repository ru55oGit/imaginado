<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_select_level"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    tools:context="com.luckypalm.imaginados.SelectLevelActivity">

    <ScrollView
        android:id="@+id/hsv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:measureAllChildren="false"
        android:scrollbars="none"
        android:gravity="center"
        android:background="@color/primaryColor"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="94dp">

    </ScrollView>

    <GridLayout
        android:id="@+id/innerLay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignTop="@+id/hsv"
        android:layout_toRightOf="@+id/hsv"
        android:layout_toEndOf="@+id/hsv">

        <TextView
            android:text="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:padding="@dimen/bg_letter_size"
            android:background="@drawable/circle"
            android:onClick="goToSelectImages"
            android:layout_row="0"
            android:layout_column="0" />

        <TextView
            android:text="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:padding="@dimen/bg_letter_size"
            android:background="@drawable/circle"
            android:onClick="goToSelectImages" />

        <TextView
            android:text="3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:padding="@dimen/bg_letter_size"
            android:background="@drawable/circle"
            android:onClick="goToSelectImages"
            android:layout_row="0"
            android:layout_column="3" />

        <TextView
            android:text="4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:padding="@dimen/bg_letter_size"
            android:background="@drawable/circle"
            android:onClick="goToSelectImages"
            android:layout_row="0"
            android:layout_column="12" />
    </GridLayout>

</RelativeLayout>
