<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backColorPlay"
    tools:context=".PlayActivity">

        <Button
            android:id="@+id/aleatorio"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/whiteback"
            android:shadowColor="@color/colorAccent"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="5"
            android:textColor="@color/primaryColor"
            android:text="Aleatorio"
            android:textSize="32dp" />

        <Button
            android:id="@+id/emojis"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/emojis1"
            android:textSize="32dp"
            android:shadowColor="@color/colorAccent"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="5"
            android:textColor="@color/primaryColor"
            android:text="" />

        <Button
            android:id="@+id/acertijos"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/aleatorio"
            android:background="@drawable/adivinanzas1"
            android:shadowColor="@color/colorAccent"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="5"
            android:textColor="@color/primaryColor"
            android:textSize="32dp"
            android:text="" />

        <Button
            android:id="@+id/peliculas"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/emojis"
            android:background="@drawable/peliculas1"
            android:shadowColor="@color/colorAccent"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="5"
            android:textColor="@color/primaryColor"
            android:textSize="32dp"
            android:text="" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@color/primaryColor"
        android:id="@+id/footerContainer"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EspaÃ±ol"
            android:textColor="@color/white"
            android:textSize="@dimen/bg_letter_size"
            android:layout_alignParentLeft="true"/>

        <Switch
            android:id="@+id/languageSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:thumbTint="@color/backLetters"
            android:trackTint="@color/white"
            android:textOn="YES"
            android:textOff="SI"
            android:textSize="25sp"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="English"
            android:textColor="@color/white"
            android:textSize="@dimen/bg_letter_size"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>
</RelativeLayout>
