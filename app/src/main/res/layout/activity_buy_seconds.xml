<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_buy_seconds"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@drawable/tile"
    tools:context=".BuySecondsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/firstSeparator"
        android:orientation="horizontal"
        android:background="@color/cardview_dark_background"
        android:layout_centerVertical="true"
        android:padding="1dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="10dp"
        android:id="@+id/header"
        android:background="@color/secondaryColor"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sin_tiempo_title"
            android:textSize="18dp"
            android:textColor="@color/backLetters"
            android:padding="3dp"
            android:layout_gravity="left"
            android:layout_weight="0.95"/>
        <ImageButton
            android:id="@+id/dialogButtonOK"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/cerrar"
            android:layout_gravity="right"
            android:layout_weight="0.05"
            android:shadowColor="@color/cardview_dark_background"
            android:shadowDx="10"
            android:shadowDy="10"
            android:shadowRadius="10"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/threeMinutesContainer"
        android:layout_below="@+id/header"
        android:padding="10dp"
        android:orientation="horizontal"
        android:background="@color/thirdColor">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/threeMinutesTxt"
            android:textSize="@dimen/buyseconds_letter_size"
            android:textColor="@color/secondaryColor"
            android:paddingLeft="5dp"
            />

        <Button
            android:id="@+id/threeMinutesBtn"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/borders_buy"
            android:layout_alignParentRight="true"
            android:textColor="@color/cardview_light_background"
            android:elevation="7dp" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fiveMinutesContainer"
        android:padding="10dp"
        android:layout_below="@+id/threeMinutesContainer"
        android:background="@color/primaryColor">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fiveMinutesTxt"
            android:textSize="@dimen/buyseconds_letter_size"
            android:textColor="@color/thirdColor"
            android:paddingLeft="5dp"
            />

        <Button
            android:id="@+id/fiveMinutesBtn"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/borders_buy"
            android:layout_alignParentRight="true"
            android:textColor="@color/cardview_light_background"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sevenMinutesContainer"
        android:padding="10dp"
        android:layout_below="@+id/fiveMinutesContainer"
        android:background="@color/thirdColor">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sevenMinutesTxt"
            android:textSize="@dimen/buyseconds_letter_size"
            android:textColor="@color/secondaryColor"
            android:paddingLeft="5dp"
            />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/noads"
            android:layout_alignParentRight="true"
            android:layout_marginRight="125dp"/>

        <Button
            android:id="@+id/sevenMinutesBtn"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/borders_buy"
            android:layout_alignParentRight="true"
            android:textColor="@color/cardview_light_background"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tenMinutesContainer"
        android:padding="10dp"
        android:layout_below="@+id/sevenMinutesContainer"
        android:background="@color/primaryColor">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tenMinutesTxt"
            android:textSize="@dimen/buyseconds_letter_size"
            android:textColor="@color/thirdColor"
            android:paddingLeft="5dp"
            />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/noads"
            android:layout_alignParentRight="true"
            android:layout_marginRight="125dp"/>

        <Button
            android:id="@+id/tenMinutesBtn"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/borders_buy"
            android:layout_alignParentRight="true"
            android:textColor="@color/cardview_light_background"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fifteenMinutesContainer"
        android:padding="10dp"
        android:layout_below="@+id/tenMinutesContainer"
        android:background="@color/thirdColor">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fifteenMinutesTxt"
            android:textSize="@dimen/buyseconds_letter_size"
            android:textColor="@color/secondaryColor"
            android:paddingLeft="5dp"
            />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/noads"
            android:layout_alignParentRight="true"
            android:layout_marginRight="125dp"
            />

        <Button
            android:id="@+id/fifteenMinutesBtn"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/borders_buy"
            android:layout_alignParentRight="true"
            android:textColor="@color/cardview_light_background"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/twentyMinutesContainer"
        android:padding="10dp"
        android:layout_below="@+id/fifteenMinutesContainer"
        android:background="@color/primaryColor"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/twentyMinutesTxt"
            android:textSize="@dimen/buyseconds_letter_size"
            android:textColor="@color/thirdColor"
            android:paddingLeft="5dp"
            android:text="20 minutos +"
            />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/noads"
            android:layout_alignParentRight="true"
            android:layout_marginRight="125dp"
            />

        <Button
            android:id="@+id/twentyMinutesBtn"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/borders_buy"
            android:layout_alignParentRight="true"
            android:textColor="@color/cardview_light_background"/>
    </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>
